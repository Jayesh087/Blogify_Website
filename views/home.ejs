<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
   <style>
  body {
    background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-attachment: fixed;
  }
</style>


  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        <% blogs.forEach(blog => { %>
          <div class="col">
            <div class="card h-100">
              <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover Image" />
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= blog.title %></h5>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm">View</a>
                <form action="/blog/delete/<%= blog._id %>" method="POST">
                  <button type="submit" class="btn btn-danger btn-sm">ğŸ—‘ Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

  </body>
</html>
